include("i18n.inc");
include("save_state.inc");
include("basicDisplay.inc");
include("addLeadingZero.inc");


function do_time(dateString)
{
	core.setDate(dateString, "utc");
	LabelMgr.labelScreen(dateString,150,150,true,20,"#ffff00",true,2000);
	core.wait(0.25);
	display.display();
	core.wait(2.00);
}

core.goHome();
saveState("sunSeasons-demo");
core.setTimezone("UTC-06:00");

core.setGuiVisible(false);
core.clear("natural");
core.setTimeRate(0.0); // pause time
core.wait(0.25);

core.setObserverLocation(0.0, 0.0, 0.0, 0.25, "", "Earth"); // longitude, latitude, altitude, transition time, name, planet 
core.setDate("2019-01-01T00:00:00", "utc");
core.wait(0.25);



var display =  Object.create(basicDisplay);
display.timezone = 0.0;
display.textTitle = "The Sun's path in different seasons";
display.display();

do_time("2019-01-01T00:00:00");
